@model MonkeysTheoremWeb.Models.GeneticAlgorithmViewModel

@{
    ViewData["Title"] = "Parámetros";
    Layout = "_Layout";
}

<div class="container">
    <h4>Ingrese los parámetros del Algoritmo</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Calculate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Phrase" class="control-label"></label>
                    <input asp-for="Phrase" class="form-control" />
                    <span asp-validation-for="Phrase" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Population" class="control-label"></label>
                    <input asp-for="Population" class="form-control" />
                    <span asp-validation-for="Population" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Generations" class="control-label"></label>
                    <input asp-for="Generations" class="form-control" />
                    <span asp-validation-for="Generations" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CrossoverProbability" class="control-label"></label>
                    <input asp-for="CrossoverProbability" class="form-control" />
                    <span asp-validation-for="CrossoverProbability" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MutationProbability" class="control-label"></label>
                    <input asp-for="MutationProbability" class="form-control" />
                    <span asp-validation-for="MutationProbability" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SolverSelection" class="control-label"></label>
                    <select asp-for="SolverSelection" class="form-control" asp-items="ViewBag.SelectionMethods"></select>
                    <span asp-validation-for="SolverSelection" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ejecutar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Volver al listado</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
